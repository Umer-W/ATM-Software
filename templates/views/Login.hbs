</head>
<body>
    {{>header}}
    <form action="Account" method="post">
        <h2 style="color: green;">{{note}}</h2>
       
        <h1 class="h">LOGIN FORM</h1>
        <div class="inputs">
            
            <input type="email" placeholder="Enter Email" name="email">
           
            
            <input type="number" placeholder="Enter Account number" name="accountnumber">
           
        </div>
        <input type="submit" value="Log in" class="formbtn">
         <h2 style="color: rgb(218, 11, 11);">{{notee}}</h2>
    </form>
    <div class="image">

    </div>
    {{>footer}}
