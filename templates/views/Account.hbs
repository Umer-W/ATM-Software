        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0px;
            padding: 0px;
            box-sizing: border-box;
            background: url("/images/ATM-image8.jpg") no-repeat center center fixed;
            background-size: cover;
            background-size: 100%;
            height: 100vh;
            display: flex;
            flex-direction: column;
        }

        main {
            display: flex;
            justify-content: space-around;

            flex-wrap: wrap;

            margin-top: 0%;
            margin-bottom: 5%;
            text-align: center;
            color: rgba(0, 0, 0, 0.884);
        }

        .image {
            width: 40%;

        }

        .para {
            width: 40%;
        }

        main .image img {
            width: 70%;
            border-radius: 5px;
            margin-left: 90px;
        }

        .success {
            font-size: 20px;
            font-weight: 700;
            color: green;
            display: inline-block;
            text-align: center;
            margin-left: 30%;
            margin-right: 30%;
            background-color: rgba(255, 255, 255, 0.699);
            padding: 2%;
            border-radius: 10px;
            box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;




        }

        .infoTable {
            background-color: rgba(255, 255, 255, 0.856);
            text-align: start;
            border: 1px solid black;
            padding: 1%;
            font-weight: 700;
            border-radius: 10px;
            box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;
            width: 600px;
            color: rgb(0, 0, 0);
            font-size: 25px;
            margin-right: 440px;
            padding-left: 8%;
            margin-left: 440px;

        }

        table td {
            padding-right: 70px;

        }



        .depositForm {
            background-color: rgba(255, 255, 255, 0.699);

            padding: 2%;
            border: 1px solid black;
            box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;
            border-radius: 10px;
            width: 20%;
            margin: 50px;
        }

        .depositForm input {
            padding: 4%;
            font-size: larger;
            border: none;
            box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;
            margin: 2%;
            border-radius: 10px;
            background-color: black;
            color: white;
            width: 80%;

        }

        .depositForm .btn {
            background-color: rgb(248, 248, 248);
            color: black;
            box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;

        }

