<body>
    {{>header}}
    <p class="success">You are logged in successfully</p>
    <main>
        <div class="infoTable">
            <h2 >Assalam O Alaikum {{naaam}}</h2>
            <table>

                <tr>
                    <td>
                        Name:
                    </td>
                    <td>
                        {{name}}
                    </td>
                </tr>
                <tr>
                    <td>
                        Email:
                    </td>
                    <td>
                        {{email}}
                    </td>
                </tr>
                <tr>
                    <td>
                        Phone No:
                    </td>
                    <td>
                        {{phone}}
                    </td>
                </tr>
                <tr>
                    <td>
                        Password:
                    </td>
                    <td>
                        {{password}}
                    </td>
                </tr>
                <tr>
                    <td>
                        Balance:
                    </td>
                    <td>
                        {{balance}} Rs.
                    </td>
                </tr>
            </table>
        </div>
        <div class="depositForm">
            <form action="Deposit" method="post">
                <h2>Deposit Money</h2>
                <input type="number" placeholder="Enter Amount" name="money"> <br>
                <input type="number" placeholder="Enter Your Account Number" name="accountNumber"> <br>
                <input class="btn" type="submit" value="Deposit money">

            </form>
        </div>

        <div class="depositForm">
            <form action="/Transfer" method="post">
                <h2>Transfer Money</h2>
                <input type="number" placeholder="Enter Amount" name="money"> <br>
                <input type="number" placeholder="Enter Your Account Number" name="accountNumber"> <br>
                <input type="number" placeholder="Enter Recipient Account Number" name="recipientNumber"> <br>
                <input class="btn" type="submit" value="Transfer money">

            </form>
        </div>
        <div class="depositForm">
            <form action="Withdraw" method="post">
                <h2>Withdraw Money</h2>
                <input type="number" placeholder="Enter Amount" name="money"> <br>
                <input type="number" placeholder="Enter Account Number" name="accountNumber"> <br>
                <input class="btn" type="submit" value="Withdraw money">

            </form>
        </div>
    </main>
    {{>footer}}
